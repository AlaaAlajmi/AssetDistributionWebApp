@{
	ViewBag.Title = "Approval Page";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Approval Page</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <div class="row">
            @*<div class="col-lg-3 col-md-2"></div>*@
            <div class="col-lg-6 col-md-8 login-box">

                <!-- Container Title-->
                <div class="col-lg-12 login-title">


                    <img style="border-radius:20% ; width: 20%" src="~/img/Copy of KFH ASSETS DISTERIBUTION.png" />

          
                </div>
                <!--Login Form-->
                <section>
                    <div class="col-lg-10 login-form flexContainer">
                        <div class="col-lg-12 login-form">
                            <form>
                                <div class="form-group ">
                                    <label class="form-control-label">Asset name </label>
                                    <input type="text" disabled class="form-control">
                                </div>
                                <div class="form-group ">
                                    <label class="form-control-label">Amount </label>
                                    <input type="number" disabled class="form-control">
                                </div>
                                <div class="form-group ">
                                    <label class="form-control-label">Upload Image </label>
                                    <img src="..." class="img-thumbnail" alt="...">

                                </div>
                                <div class="form-group ">
                                    <label class="form-control-label">Focal point</label>
                                    <input type="text" disabled class="form-control">
                                </div>
                                <div class="form-group ">
                                    <label class="form-control-label">Descrebtion</label>
                                    <textarea rows="3" disabled type="text" class="form-control"></textarea>
                                </div>



                                <div class="col-lg-12 loginbttm">
                                    <div class="col-lg-6 login-btm login-text">
                                    </div>
                                    <div class="col-lg-6 text-center login-btm login-button">
                                        <button type="submit" class="btn btn-success btn-lg" asp-action="Index">Approve</button>
                                        <br/>
                                        <br/>
                                        <button type="submit" class="btn btn-danger  btn-lg" asp-action="Index">Decline</button>



                                    </div>
                                </div>
                                <br />
                                <br />

                            </form>
                        </div>
                    </div>
                </section>
                <div class="col-lg-3 col-md-2"></div>
            </div>
        </div>
    </div>
  
</body>
</html>