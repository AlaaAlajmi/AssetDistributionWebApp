@using AssetDistributionWebApp.Data.ViewModel
@model LoginVM
@{
    ViewBag.Title = "Home Page";

}
<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/site.css" />
    <title>Index</title>
</head>
<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->

<body>
    <!-- Login Container -->
    <div class="container ">

        <div class="row">
            @*<div class="col-lg-3 col-md-2"></div>*@
            <div class="col-lg-6 col-md-8 login-box">

                <!-- Container Title-->
                <div class="col-lg-12 login-title">
                    <img style="border-radius:20% ; width: 20%" src="~/img/Copy of KFH ASSETS DISTERIBUTION.png" />
                    <br />
                    Assets Distribution Login
                </div>
                <!--Login Form-->
                <section>
                    <div class="col-lg-10 login-form flexContainer">
                        <div class="col-lg-12 login-form">

                            <form asp-action="AreaLeaderHP">
                                <div class="form-group " asp-validation-summary="ModelOnly"></div>
                                <div class="form-group ">
                                    <label class="form-control-label">Email Address</label>
                                    <input type="text" class="form-control" asp-for="EmailAddress">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label class="form-control-label">Password</label>
                                    <input type="password" class="form-control" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <!--Login Button -->
                                <div class="col-lg-12 loginbttm">
                                    <div class="col-lg-6 login-btm login-text">
                                        <!-- Error Message -->
                                    </div>
                                    <div class="col-lg-6 text-center login-btm login-button">
                                        <button type="submit" class="btn btn-outline-primary btn-lg">Login</button>

                                    </div>
                                </div>
                                <br />
                                <br />

                            </form>

                        </div>
                    </div>
                </section>
                <div class="col-lg-3 col-md-2"></div>
            </div>
        </div>
    </div>





</body>

</html>